<launch>
  <arg name="prototxt_file" default="$(find-pkg-share tensorrt_yolo3)/data/yolov3_416_trt.prototxt"/>
  <arg name="caffemodel_file" default="$(find-pkg-share tensorrt_yolo3)/data/yolov3_416.caffemodel"/>
  <arg name="input_topic" default="/image_raw"/>
  <arg name="output_topic" default="rois"/>
  <node pkg="tensorrt_yolo3" exec="tensorrt_yolo3" name="$(anon tensorrt_yolo3)" output="screen">
    <remap from="/image_raw" to="$(var input_topic)" />
    <remap from="rois" to="$(var output_topic)" />
    <remap from="/perception/tensorrt_yolo3/classified_image" to="$(var output_topic)/debug/image" />
    <param name="prototxt_file" type="str" value="$(var prototxt_file)"/>
    <param name="caffemodel_file" type="str" value="$(var caffemodel_file)"/>
  </node>
</launch>
